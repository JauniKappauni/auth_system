<%- include('../partials/header.ejs') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
  </head>
  <body class="bg-gray-900 text-white">
    <h2 class="text-2xl font-bold text-center mt-4">Hello <%=user.role%> <%=user.email%></h2>
    <% if (user.role === 'admin') { %>
    <a href="/admin-dashboard" class=" bg-blue-500 py-2 text-white hover:bg-blue-600">Admin-Dashboard</a>
    <% } %>
    <form action="/delete-account" method="POST" class="flex flex-col items-center space-y-4 mt-4">
      <button type="submit" class="bg-blue-500 py-2 px-4 text-white rounded hover:bg-blue-600">Delete User</button>
    </form>
    <form action="/change-password" method="POST" class="flex flex-col items-center space-y-4 mt-4">
      <input type="text" name="newpassword" class="p-2 bg-gray-700 text-white border border-gray-600 rounded" required />
      <button type="submit" class="bg-blue-500 py-2 px-4 text-white rounded hover:bg-blue-600">Change Password</button>
    </form>
  </body>
</html>
<%- include('../partials/footer.ejs') %>
