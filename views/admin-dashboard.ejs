<%- include('../partials/header.ejs') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      td {
        border: 1px solid white;
      }

      th {
        border: 2px solid white;
      }
    </style>
  </head>

  <body class="bg-gray-900 text-white">
    <h1 class="text-2xl font-bold text-center mt-4"><%= title %></h1>
    <h2 class="text-2xl font-bold text-center mt-4">
      Hello <%= user.role %> <%= user.email %>
    </h2>
    <h1 class="text-2xl font-bold text-center mt-4">User List</h1>
    <table class="mx-auto mt-4">
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Password</th>
          <th>Reset Token</th>
          <th>Reset Expires</th>
          <th>Role</th>
          <th>Created at</th>
          <th>Last Login</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user=> { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= user.reset_token %></td>
          <td><%= user.reset_expires %></td>
          <td><%= user.role %></td>
          <td><%= user.created_at %></td>
          <td><%= user.last_login %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <br>
    <hr>
    <form action="/delete-user" method="POST" class="flex flex-col items-center space-y-4 mt-4">
      <input type="text" name="id" placeholder="Enter id" class="p-2 bg-gray-700 text-white border border-gray-600 rounded" required />
      <button type="submit" class="bg-blue-500 py-2 px-4 text-white rounded hover:bg-blue-600">Delete User</button>
    </form>
  </body>
</html>
<%- include('../partials/footer.ejs') %>
